<div class='row'>
  <h2> Please Signup to Make $$$ </h2>
  <h5> All the money awaits you inside...</h5>

  <form action='/login' method='POST' class='form-horizontal'>
    <div class="form-group">
      <label for="username" class="col-sm-2 control-label">Email</label>
      <div class="col-sm-10">
        <input type="username" class="form-control" id="username" value='Bob-Karlton'>
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="col-sm-2 control-label">Password</label>
      <div class="col-sm-10">
        <input type="password" class="form-control" id="password">
      </div>
    </div>
    {{#if referrerCode}}
      <input type='hidden' name='_referrerCode' value="{{referrerCode}}">
    {{/if}}
    <button class='btn btn-success' type='submit' id='login now'>Signup</button>
  </form>
</div>
